{
  "name": "etiquetas-desktop",
  "version": "1.0.0",
  "description": "Sistema de geração de etiquetas para impressoras térmicas",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "etiquetas",
    "impressora",
    "PPLA",
    "EPL2",
    "ZPL",
    "Argox",
    "barcode",
    "qrcode"
  ],
  "author": "Matheus Santos - DFcom",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "jsbarcode": "^3.11.5",
    "qrcode": "^1.5.3",
    "serialport": "^12.0.0"
  },
  "build": {
    "appId": "com.whitelabel.etiquetas",
    "productName": "Etiquetas Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}