{
  "name": "etiquetas-desktop",
  "version": "2.0.0",
  "description": "Aplicativo para impress√£o de etiquetas 40x60mm com QR Code em impressoras Argox OS-2140",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "publish": "electron-builder --win --publish always",
    "rebuild": "electron-rebuild"
  },
  "author": "DFCOM",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "electron-updater": "^6.1.7",
    "qrcode": "^1.5.3"
  },
  "build": {
    "appId": "com.dfcom.etiquetas",
    "productName": "Etiquetas DFCOM",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "seu-usuario",
      "repo": "etiquetas-desktop"
    },
    "extraResources": [
      "assets/**"
    ]
  }
}
