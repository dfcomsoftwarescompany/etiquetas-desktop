{
  "name": "etiquetas-desktop",
  "version": "1.0.0",
  "description": "Sistema de geração de etiquetas para impressoras térmicas",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "build": "tsc",
    "watch": "tsc -w",
    "dist": "npm run build && electron-builder --publish=never",
    "clean": "rimraf dist"
  },
  "keywords": [
    "etiquetas",
    "impressora",
    "PPLA",
    "EPL2",
    "ZPL",
    "Argox"
  ],
  "author": "Matheus Santos - DFcom",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/qrcode": "^1.5.5",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "jsbarcode": "^3.11.5",
    "qrcode": "^1.5.3",
    "serialport": "^12.0.0"
  },
  "build": {
    "appId": "com.whitelabel.etiquetas",
    "productName": "Etiquetas Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
